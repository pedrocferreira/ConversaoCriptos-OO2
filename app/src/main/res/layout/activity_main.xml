<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"


    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="16dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            <ImageView
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_btc" />

            <TextView
                android:id="@+id/tv_value_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_xrp" />

            <TextView
                android:id="@+id/tv_value_xrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_eth" />

        <TextView
            android:id="@+id/tv_value_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_ltc" />

            <TextView
                android:id="@+id/tv_value_ltc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/valorMoeda"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:ems="10"
        android:hint="R$ "
        android:inputType="number"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:visibility="visible" />



</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCaclular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:onClick="clickOk"
            android:text="Calcular"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/radioGroup">


            <RadioButton
                android:id="@+id/radioBtc"
                android:layout_width="wrap_content"
                android:layout_height="0mm"
                android:layout_weight="1"
                android:text="BTC"
                android:onClick="checkButton"   />

            <RadioButton
                android:id="@+id/radioEth"
                android:layout_width="wrap_content"
                android:layout_height="0mm"
                android:layout_weight="1"
                android:text="ETH"
                android:onClick="checkButton"  />

            <RadioButton
                android:id="@+id/radioXrp"
                android:layout_width="wrap_content"
                android:layout_height="0mm"
                android:layout_weight="1"
                android:text="XRP"
                android:onClick="checkButton"  />

            <RadioButton
                android:id="@+id/radioLtc"
                android:layout_width="wrap_content"
                android:layout_height="0mm"
                android:layout_weight="1"
                android:text="LTC"
                android:onClick="checkButton"  />


        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:id="@+id/resultadoCalculo"
            android:layout_width="301dp"
            android:layout_height="87dp"
            android:fontFamily="sans-serif"
            android:text="ConversÃ£o"
            android:textAlignment="center"
            android:textColor="#F01"
            android:textSize="40sp"
            android:textStyle="bold" />




</LinearLayout>



</LinearLayout>